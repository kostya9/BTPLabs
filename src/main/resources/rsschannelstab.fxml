<GridPane minHeight="330.0" minWidth="600.0" vgap="1.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ksharovarsky.lab3.ui.RssChannelsTabController">
    <children>
                <HBox spacing="10" style="-fx-padding: 0 0 0 10px;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" GridPane.rowIndex="10" >
                 <children>
                      <Label text="Name" HBox.hgrow="ALWAYS">
                          <font>
                              <Font size="16.0" />
                          </font>
                      </Label>
                     <TextField fx:id="nameField" prefHeight="25.0" prefWidth="147.0" HBox.hgrow="ALWAYS"/>
                      <Label text="Url">
                          <font>
                              <Font size="16.0" />
                          </font>
                      </Label>
                     <TextField fx:id="urlField" prefHeight="25.0" prefWidth="247.0" HBox.hgrow="ALWAYS"/>
                     <Button fx:id="addButton" mnemonicParsing="false" text="Add Channel" HBox.hgrow="ALWAYS" />
                 </children>
                </HBox>
                <TableView fx:id="tableChannels" GridPane.hgrow="ALWAYS" GridPane.rowIndex="20" GridPane.vgrow="ALWAYS">
                  <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                  <columns>
                    <TableColumn fx:id="nameTableColumn" minWidth="100" text="Name" />
                    <TableColumn fx:id="urlTableColumn" minWidth="300" text="Url" />
                    <TableColumn fx:id="removeTableColumn" minWidth="100" sortable="false" text="" />
                </columns>
                </TableView>
    </children>
